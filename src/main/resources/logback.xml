<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

  <property name="LOG_PATH" value="logs"/>
  <property name="LOG_FILE" value="${LOG_PATH}/application.log"/>
  <property name="LOG_LEVEL" value="[%-5level]"/>
  <property name="DATE_TIME" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}]"/>
  <property name="THREAD" value="[%thread]"/>
  <property name="COMPONENT" value="[%logger{100}]"/>
  <property name="MSG" value="%msg%n"/>

  <property name="CONSOLE_LOG_PATTERN" value="${LOG_LEVEL} - ${DATE_TIME} - ${COMPONENT} --> ${MSG}"/>
  <property name="FILE_LOG_PATTERN" value="${DATE_TIME} %-5level [%thread] %logger{36} - %msg%n"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>

    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>

  <logger name="dev.prj.sbatch1" level="DEBUG"/>
  <logger name="org.springframework" level="ERROR"/>
  <logger name="org.hibernate.orm.core" level="INFO"/>
  <!--  <logger name="org.hibernate" level="${LOGGING_LEVEL_HIBERNATE:WARN}" />-->
  <!--  <logger name="org.springframework.batch" level="${LOGGING_LEVEL_BATCH:INFO}" />-->
  <!--  <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="${LOG_HIBERNATE_BINDER_LEVEL:INFO}" />-->

</configuration>
